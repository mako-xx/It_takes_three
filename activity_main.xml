<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    andriod:orientation="vertical"
    andriod:background="@drawable/unnamed">

    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp">

        <TextView
            andriod:layout_width="50dp"
            andriod:layout_height="match_parent"
            andriod:text="NTR"
            andriod:textAlignment="center"
            andriod:paddingTop="15dp"
            />

        <ImageView
            andriod:layout_width="50dp"
            andriod:layout_height="match_parent"
            andriod:src="@drawable/ic_baseline_science_24"/>

    </LinearLayout>

    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="0dp"
        andriod:layout_weight="1"
        andriod:orientation="vertical">
    <Button
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:text="查看当前行李"
        andriod:layout_marginVertical="10dp"
        andriod:shadowColor="@color/black"
        andriod:layout_marginHorizontal="50dp"
        andriod:background="@drawable/btn_all_shape"
        />

    <Button
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:text="记录/查看餐饮门票等消费"
        andriod:layout_marginVertical="10dp"
        andriod:layout_marginHorizontal="50dp"
        andriod:background="@drawable/btn_all_shape"
        />

    <Button
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:text="景点相册"
        andriod:layout_marginVertical="10dp"
        andriod:layout_marginHorizontal="50dp"
        andriod:background="@drawable/btn_all_shape"/>

    <Button
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:text="用户评价"
        andriod:layout_marginVertical="10dp"
        andriod:layout_marginHorizontal="50dp"
        andriod:background="@drawable/btn_all_shape"/>

    <Button
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:text="编辑资料"
        andriod:layout_marginVertical="10dp"
        andriod:layout_marginHorizontal="50dp"
        andriod:background="@drawable/btn_all_shape"/>
    </LinearLayout>

    <LinearLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="50dp"
        andriod:orientation="horizontal"
        >

        <Button
            andriod:layout_width="0dp"
            andriod:layout_height="match_parent"
            andriod:layout_weight="1"
            andriod:layout_marginRight="5dp"
            andriod:text="首页"
            andriod:background="@drawable/btn_all_shape"/>
        <Button
            andriod:layout_width="0dp"
            andriod:layout_height="match_parent"
            andriod:layout_weight="1"
            andriod:layout_marginHorizontal="5dp"
            andriod:text="周边"
            andriod:background="@drawable/btn_all_shape"/>
        <Button
            andriod:layout_width="0dp"
            andriod:layout_height="match_parent"
            andriod:layout_weight="1"
            andriod:layout_marginLeft="5dp"
            andriod:text="我的"
            andriod:background="@drawable/btn_all_shape"/>

    </LinearLayout>

</LinearLayout>